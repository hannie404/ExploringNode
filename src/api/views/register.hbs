<html lang="en">

	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" />

		<title>Register Account | Register</title>
	</head>

	<body>
		<div class="container d-flex justify-content-center align-items-center vh-100">
			<div class="card" style="width: min(35rem, 100%); height: auto;">
				{{#if message}}
				<div class="alert alert-success" role="alert">
					{{message}}
				</div>
				{{/if}}
				<div class="card-header">
					Register
				</div>
				<div class="card-body">
					<form id="registerForm" accept="/register" method="POST">
						<fieldset>
							<div class="mb-3">
								<label for="firstName" class="form-label">First name</label>
								<input type="firstName" class="form-control" id="firstName" name="firstName"
									aria-describedby="firstName" placeholder="Enter first name" value="Prince" />
							</div>

							<div class="mb-3">
								<label for="lastName" class="form-label">Last name</label>
								<input type="lastName" class="form-control" id="lastName" name="lastName" aria-describedby="lastName"
									placeholder="Enter last name" value="Cipriano" />
							</div>

							<div class="mb-3">
								<label for="email" class="form-label">Email address</label>
								<input type="email" class="form-control" id="email" name="email" aria-describedby="email"
									placeholder="Enter email" value="prince@email.com" />
							</div>

							<div class="mb-3">
								<label for="password" class="form-label">Password</label>
								<input type="password" class="form-control" id="password" name="password" aria-describedby="password"
									placeholder="Create password" value="password" />
							</div>

							<div class="mb-3">
								<label for="confirmPassword" class="form-label">Password</label>
								<input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
									aria-describedby="confirmPassword" placeholder="Confirm password" value="password" />
							</div>

							<button type="submit" class="btn btn-primary d-block ms-auto">Register</button>
						</fieldset>
						<p class="text-center">Already have an account? <a href="http://localhost:8000/login">Login</a></a></h3>
					</form>
				</div>
			</div>
		</div>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
		<script>
			{
				{
					!-- const ENDPOINT = "http://localhost:8000/api";
					const registerForm = document.querySelector("#registerForm");
					registerForm.addEventListener('submit', async function (e) {
						e.preventDefault();
						const loginPayload = new FormData(this);

						const result = await fetch(`${ENDPOINT}/login`, {
							method: 'POST',
							mode: 'cors',
							body: loginPayload
						});
						console.log(result);
					})--;
				}
			}
		</script>
	</body>

</html>